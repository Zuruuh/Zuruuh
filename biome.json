{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "./home/.config/nvim/lazy-lock.json",
            "./home/.config/nushell/plugins/nu_scripts/",
            "./home/.config/gatsby/events.json",
            "./windows/*.json"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    }
}
